<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/secondary_color"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="@color/titlecard">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appname"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/titlecardtext"
        android:fontFamily="serif"
        android:textStyle="bold"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/logo5"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="10dp"/>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/speedometerview"
            android:layout_below="@+id/header_title"
            android:layout_width="300dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="45dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/secondary_color">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPEED"
                android:textSize="40dp"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:layout_marginLeft="85dp"
                android:layout_marginBottom="15dp"/>


                <com.github.anastr.speedviewlib.PointerSpeedometer
                    android:id="@+id/speedometer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8sp"
                    app:sv_speedTextColor="#ffff"
                    app:sv_unitTextColor="#ffff"
                    app:sv_withTremble="false"
                    app:sv_textSize="12sp"
                    app:sv_markWidth="3sp"
                    app:sv_speedometerWidth="14sp"
                    app:sv_pointerColor="@color/Red"
                    app:sv_indicatorColor="@color/Red"
                    app:sv_centerCircleColor="@color/Red"
                    app:sv_speedometerColor="@color/white"
                    app:sv_speedTextSize="28sp"
                    app:sv_backgroundCircleColor="#000000"/>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

    <TextView
        android:layout_below="@+id/speedometerview"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speedTV"
        android:textColor="@color/primary_color"
        android:text="0.0 km/h"
        android:fontFamily="serif"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/avgmaxview"
        android:layout_below="@+id/speedTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Widget.Material3.CardView.Filled"
        app:cardBackgroundColor="@color/secondary_color"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="10sp"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        app:cardCornerRadius="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:text="AVG Speed"
            android:fontFamily="serif"
            android:gravity="center_horizontal"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/avgspeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="28sp"
            android:textColor="@color/primary_color"
            android:gravity="center_horizontal"
            android:text="0" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Km"
            android:textColor="@color/primary_color"
            android:textSize="12sp"/>

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.Material3.CardView.Filled"
            app:cardBackgroundColor="@color/secondary_color"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:text="MAX Speed"
                    android:fontFamily="serif"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/maxspeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/primary_color"
                    android:gravity="center_horizontal"
                    android:text="0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Km"
                    android:textColor="@color/primary_color"
                    android:textSize="12sp"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.Material3.CardView.Filled"
            app:cardBackgroundColor="@color/secondary_color"
            android:layout_marginStart="20sp"
            android:layout_marginEnd="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:text="Speed LIM"
                    android:fontFamily="serif"
                    android:gravity="center_horizontal"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/speedlim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:textColor="@color/primary_color"
                    android:gravity="center_horizontal"
                    android:text="0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Km"
                    android:textColor="@color/primary_color"
                    android:textSize="12sp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/avgmaxview"
        android:layout_marginTop="-10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text=""
        android:textColor="@color/Gold"
        android:textSize="20sp"
        android:id="@+id/Phone_Numberview"/>
    </LinearLayout>
  <androidx.cardview.widget.CardView
      android:id="@+id/menu"
      android:layout_below="@+id/avgmaxview"
      android:layout_width="match_parent"
      android:layout_height="70dp"
      app:cardCornerRadius="15dp"
      android:layout_marginTop="20dp"
      android:backgroundTint="@color/menubar">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginLeft="20dp"
              android:clickable="true">
          <Button
              android:id="@+id/navhome"
              android:layout_width="25dp"
              android:layout_height="25dp"
              android:background="@drawable/home"
              android:layout_marginLeft="20dp"
              android:backgroundTint="@color/Voilet"
              android:layout_marginTop="15dp"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="15dp"
              android:text="Home"
              android:textColor="@color/menutext"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginLeft="95dp"
              android:clickable="true">
              <Button
                  android:id="@+id/navmap"
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:background="@drawable/location"
                  android:layout_marginLeft="20dp"
                  android:layout_marginTop="15dp"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="17dp"
                  android:text="Map"
                  android:textColor="@color/menutext"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginLeft="90dp"
              android:clickable="true">
              <Button
                  android:id="@+id/navsetting"
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:background="@drawable/setting"
                  android:layout_marginLeft="20dp"
                  android:layout_marginTop="15dp"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
                  android:text="Setting"
                  android:textColor="@color/menutext"/>
          </LinearLayout>
      </LinearLayout>

  </androidx.cardview.widget.CardView>
</RelativeLayout>