<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Otp"
    android:background="@color/secondary_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header_title"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:backgroundTint="@color/titlecard">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appname"
                android:textSize="30sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/titlecardtext"
                android:fontFamily="serif"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/logo5"
                android:layout_marginLeft="335dp"
                android:layout_marginTop="10dp"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/title"
        android:layout_below="@+id/header_title">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VERIFICATION"
            android:textColor="@color/primary_color"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_marginTop="50dp"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/otpimg1"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_color">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text"
                android:text="You will get Speed Exceed via SMS using This Number So Enter Correctly"
                android:textAlignment="center"
                android:textColor="@color/primary_color"
                android:layout_marginTop="10dp"
                android:textSize="15sp"/>
                <EditText
                    android:id="@+id/otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/primary_color"
                    android:backgroundTint="@color/white"
                    android:hint="Re-Enter Ph_Number"
                    android:textColorHint="@color/quantum_white_hint_text"
                    android:textAlignment="center"
                    android:inputType="phone"/>
                <Button
                    android:id="@+id/vefiybtn"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verify"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/primary_color"
                    android:textSize="25sp"/>
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If Previous Entered Number Is Wrong ?"
                android:textColor="@color/primary_color"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/resend_otp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Phone Number"
                android:layout_marginLeft="10dp"
                android:textColor="@color/green"
                android:textSize="13sp"
                android:clickable="true"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>